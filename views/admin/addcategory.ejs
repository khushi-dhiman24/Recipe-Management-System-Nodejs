<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Category | Recipe Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
  <%- include('header') %>
    <%- include('sidebar') %>
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Add Category</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                  <li class="breadcrumb-item active">Add Category</li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>
        <section class="content card">
            <div class="container-fluid card-body">
                <!-- form start -->
                <form class="form-horizontal" action="/admin/category"  method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <!-- column -->
                        <div class="col-md-12">
                            <!-- jquery validation -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Category Details</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4 col-12">
                                            <div class="form-group mb-4">
                                                <div class="form-group">
                                                    <label>Category Name <small class="text-danger">*</small></label>
                                                    <input type="text" class="form-control" name="name" placeholder="Enter Category Name" value="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <label>Image</label>
                                            <div class="form-group">
                                                <input type="file" class="form-control" name="image" id="imageInput" onChange="readURL(this)">
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <!-- <img id="image" src="" alt="" width="80px" height="80px"> -->
                                            <img id="image" src="" alt="" width="80px" height="80px">
                                        </div>
                                        <div class="col-md-12 col-12">
                                            <div class="form-group">
                                                <label>Category Description</label>
                                                <textarea class="form-control" rows="3" name="description" value=""placeholder="Enter Description Details"></textarea>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                                
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!--/.col -->
                    </div>
                    <!-- /.row -->
                    <input type="submit" class="btn btn-success" name ="status" value="Publish">
                    <input type="submit" class="btn btn-danger" name ="status" value="Draft">
                </form> <!-- /.form start -->
            </div><!-- /.container-fluid -->
        </section>
      </div>
</body>

</html>
<%- include('footer') %>
<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
    }
</script>