<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit State | Recipe Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

</head>

<body>
  <%- include('header') %>
    <%- include('sidebar') %>
      <div class="message"></div>
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Edit State</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                  <li class="breadcrumb-item active">Edit State</li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Edit State</h3>
                  </div>
                  <div class="card-body">
                    <form class="form-horizontal" id="edit-State" action="/admin/state/<%= state._id%>" method="post">
                      <div class="form-group">
                        <label for="">State Name</label>
                        <input type="hidden" name="id" value="<%= state._id %>">
                        <input type="text" class="form-control State" name="name" placeholder="State Name"
                          value="<%= state.name %>" required>
                      </div>
                      <div class="form-group">
                        <label>Country Name</label>
                        <select name="country" class="form-control">
                            <option selected value="">Select The Country Name</option>
                            <% country.forEach(country=> { %>
                              <option value="<%= country._id %>" <%=country._id.toString()=== state.country.toString()? 'selected' : '' %>>
                                  <%= country.name %>
                              </option>
                              <% }) %>
                        </select>
                    </div>
                      <input type="submit" class="btn btn-primary" name ="submit">
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
</body>

</html>
<%- include('footer') %>

