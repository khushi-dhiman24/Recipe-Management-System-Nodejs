<%- include('header') %> 

<!-- Page Title and Breadcrumb -->
<div class="page-header mb-0">
  <div class="container">
    <% if (page) { %>
    <div class="row">
      <div class="col-12">
        <h2><%= page.title %></h2>
      </div>
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= page.title %></li>
          </ol>
        </nav>
      </div>
    </div>
    <% } %>
  </div>
</div>

<!-- Page Content -->
<div id="main-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p><%= page.description %></p>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
