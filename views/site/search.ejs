<%- include('header') %> 

<!-- Page Header Start -->
<div class="page-header mb-0">
    <div class="container">
        <div class="row">
            <% if (keyword) { %>
            <div class="col-12">
                <h2>Search:"<%= keyword %>"</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Search</li>
                </ol>
            </div>
            <% } %> 
        </div>
    </div>
</div>
<!-- Page Header End -->

<div id="main-content">
<div class="all_recipe">
    <div class="container">
        <div class="row">
            <% if (allRecipe.length > 0) { %>
                <% allRecipe.forEach(recipe => { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="recipe-grid">
                            <div class="recipe-img">
                                <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>">
                            </div>
                            <div class="recipe-content">
                                <h4><a href="/recipe/<%= recipe._id %>"><%= recipe.name %></a></h4>
                               <ul class="recipe-info">
                                <% const matchedCategory = category.find(cat => cat._id.toString() === recipe.category.toString()); %>
                                <li>
                                    <% if (matchedCategory) { %>
                                        <a href="/c/<%= matchedCategory._id %>"><%= matchedCategory.name %></a>
                                        <% } else { %>
                                            <span>Uncategorized</span>
                                            <% } %>
                                            </li>
                                <li><i class="far fa-clock"></i> <%= parseInt(recipe.pre_time) + parseInt(recipe.cook_time) %> mins</li>
                            </ul>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <h3 class="sub-heading">No Recipes Found</h3>
                </div>
            <% } %>
        </div>
    </div>
</div>
</div>

<%- include('footer') %> 
